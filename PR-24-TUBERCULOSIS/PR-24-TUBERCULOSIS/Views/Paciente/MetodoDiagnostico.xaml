<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PR_24_TUBERCULOSIS.Views.Paciente.MetodoDiagnostico"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="35" Spacing="35">

            <!-- Título -->
            <Label 
                Text="Metodo Diagnostico"
                FontAttributes="Bold"
                FontFamily="bold"
                FontSize="Large"
                Padding="35"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <!-- Contenedor de la tabla -->
            <Grid ColumnDefinitions="Auto,*,Auto"
                  RowDefinitions="auto,auto,auto,auto" Padding="35"
                  HorizontalOptions="Center">
                <!-- Ajuste realizado aquí -->

                <!-- Baciloscopia -->
                <Label Text="Baciloscopia" Grid.Row="0" Grid.Column="0" Margin="0,10,10,0"/>
                <Picker x:Name="BaciloscopiaPicker" Grid.Row="0" Grid.Column="1" WidthRequest="150">
                    <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Positivo</x:String>
                        <x:String>Negativo</x:String>
                    </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Grid.Row="0" Grid.Column="2" Margin="10,10,0,0"/>

                <!-- Cultivo -->
                <Label Text="Cultivo" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                <Picker x:Name="CultivoPicker" Grid.Row="1" Grid.Column="1" WidthRequest="150">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Positivo</x:String>
                            <x:String>Negativo</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Grid.Row="1" Grid.Column="2" Margin="10,10,0,0"/>

                <!-- Clinico -->
                <Label Text="Clinico" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0"/>
                <Entry x:Name="ClinicoEntry" Placeholder="Clinico" Grid.Row="2" Grid.Column="1" WidthRequest="150"/>
                <Label Grid.Row="2" Grid.Column="2" Margin="10,10,0,0"/>

                <!-- Genexpert -->
                <Label Text="Genexpert" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0"/>
                <Picker x:Name="GenexpertPicker" Grid.Row="3" Grid.Column="1" WidthRequest="150">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Detectado</x:String>
                            <x:String>No detectado</x:String>
                            <x:String>RR Sensible</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Grid.Row="3" Grid.Column="2" Margin="10,10,0,0"/>

            </Grid>

            <!-- Botones -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Registrar" TextColor="Black" BackgroundColor="#73F6A6"  Clicked="Button_Clicked" WidthRequest="150"/>
                <Button Text="Cancelar" BackgroundColor="#F23456" TextColor="White" Clicked="btnCancelar_Clicked" WidthRequest="150"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

